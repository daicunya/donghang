.navbar
  //background-color: #444
  &>.container
    margin-bottom: 0
  .navbar-header
    .navbar-brand
      display: block
      width: 12rem
      img
        width: 100%
  .navbar-collapse
    float: left
    margin-left: 5%
    .navbar-nav
      &>li
        &:hover
          //background-color: #e9b257
        &>a
          color: #777
          &:hover,
          &:link,
          &:focus
            color: #e9b257
      & > .open
        & > a,
        & > a:focus,
        & > a:hover
          color: #fff
          background-color: #e9b257
      & > .active
        & > a,
        & > a:focus,
        & > a:hover
          color: #fff
          background-color: #e9b257
      .nav-second
        min-width: 300px
        &>ul
          float: left
          padding: 0 1.5rem
          h4
            font-size: 1.6rem
            color: #777
          li
            a
              line-height: 26px
              font-size: 1.4rem
              color: #fff
              &:hover
                color: #333
      .dropdown-menu
        border: 0
        box-shadow(0)
        background-color: #e9b257
        & > li
          & > a
            padding: 5px 15px
            color: #fff
            &:hover
              color: #777
              background-color: #e9b257
        &>ul
          li
            a
              &:hover
                color: #777

@media screen and (min-width: 765px) and (max-width: 990px) {
  .navbar-form {
    display: none
  }
}
@media screen and (max-width: 767px) {
  .navbar .navbar-collapse {
    width: 100%;
  }
  .navbar-nav .open .dropdown-menu {
    background-color: #e9b257
  }
  .navbar-default .navbar-nav .open .dropdown-menu > li > a {
    color: #fff
  }
  .navbar-nav .open .dropdown-menu>ul>li>a {
    line-height: 20px;
  }
  .navbar-form {
    display: block
  }
  .navbar-form .form-group {
    float: left;
  }
}