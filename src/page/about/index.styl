@import "../common/css/mixin.styl";

.about-tab
  position: fixed
  top: 70px
  left: 7%
  li
    width: 200px
    padding: 15px 0
    &.on
      background-color: #e9b257
      a
        color: #fff
    &:hover
      background-color: #e9b257
      a
        color: #fff
    &>a
      display: block
      padding-left: 20px
      font-size: 20px
      font-weight: normal
      color: #777
.about-cnt
  margin-left: 240px
  h2
    font-size: 24px
    font-weight: normal
  &>div
    padding-top: 70px
    p
      font-size: 14px
      color: #777
      line-height: 26px
  .about-us
    &>p
      font-size: 14px
      color: #777
      line-height: 26px
  .contact-us
    &>p
      font-size: 14px
      span
        padding-right: 10px
        font-size: 16px
    #allMap
      height: 400px
  .copy-right
    h4
      margin-top: 30px